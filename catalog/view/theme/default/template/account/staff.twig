    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-list"></i> {{ text_staff_info }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-user" class="form-horizontal" >
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-staff_name">{{ entry_staff_name }}</label>
            <div class="col-sm-10">
              <input type="text" name="staff_name" value="{{ staff_name }}" placeholder="{{ entry_staff_name }}" id="input-staff_name" class="form-control"  readonly="true" />
              {% if error_staff_name %}
              <div class="text-danger">{{ error_staff_name }}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-email">{{ entry_email }}</label>
            <div class="col-sm-10">
              <input type="text" name="email" value="{{ email }}" placeholder="{{ entry_email }}" id="input-email" class="form-control" readonly="true" />
              {% if error_email %}
              <div class="text-danger">{{ error_email}}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-department">{{ entry_department }}</label>
            <div class="col-sm-10">
              <input type="text" name="department" value="{{ department }}" placeholder="{{ entry_department }}" id="input-department" class="form-control" readonly="true" />
              {% if error_department %}
              <div class="text-danger">{{ error_department }}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-position">{{ entry_position }}</label>
            <div class="col-sm-10">
              <input type="text" name="position" value="{{position }}" placeholder="{{ entry_position }}" id="input-position" class="form-control" readonly="true" />
              {% if error_position %}
              <div class="text-danger">{{ error_position }}</div>
              {% endif %}
            </div>
          </div>
