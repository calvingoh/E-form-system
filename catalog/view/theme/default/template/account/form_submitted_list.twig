{{ header }}
<div id="account-form_submitted" class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-9' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">{{ content_top }}
      <h1>{{ heading_title }}</h1>
    <!--   <p>{{ text_total }} <b>{{ total }}</b>.</p> -->
      <div class="table-responsive">
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <td class="text-left">{{ column_form_submitted_name }}</td>
              <td class="text-left">{{ column_department }}</td>
              <td class="text-left">{{ column_status }}</td>
              <td class="text-left">{{ column_date_submitted }}</td>
              <td class="text-left">{{ column_date_approved }}</td>
              <td class="text-left">{{ column_action }}</td>
            </tr>
          </thead>
          <tbody>

          {% if applicants %}
          {% for applicant in applicants %}
          <tr>
            <td class="text-left">{{ applicant.eform_name }}</a></td>
            <td class="text-left">{{ applicant.department }}</td>
            <td class="text-left"><b>{% if applicant.status == 'Approved' %}<span style="color:green">{% elseif applicant.status == 'Pending' %}<span style="color:darkorange">{% elseif applicant.status == 'Denied' %}<span style="color:red">{% endif %}{{ applicant.status }}</span></b></td>
            <td class="text-left">{{ applicant.date_submitted }}</td>
            <td class="text-left">{{ applicant.date_approved }}</td>
            <td class="text-right"><a href="{{ applicant.edit }}" data-toggle="tooltip" title="{{ button_edit }}" class="btn btn-primary"><i class="fa fa-eye"></i></a></td>
          </tr>
          {% endfor %}
          {% else %}
          <tr>
            <td class="text-center" colspan="6">{{ text_empty }}</td>
          </tr>
          {% endif %}
            </tbody>
          
        </table>
      </div>
      <div class="row">
        <div class="col-sm-6 text-left">{{ pagination }}</div>
        <div class="col-sm-6 text-right">{{ results }}</div>
      </div>
      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
{{ footer }}